# Academic Research Mentor Environment Configuration

# API Keys (at least one required)
OPENROUTER_API_KEY=your-openrouter-key-here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
OPENROUTER_MODEL=anthropic/claude-sonnet-4
OPENAI_MODEL=gpt-4o-mini
GEMINI_MODEL=gemini-2.5-flash-latest
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# Agent Configuration
LC_AGENT_MODE=react
ARM_PROMPT=system

# Conversation History Configuration
# Enable bounded in-memory conversation history for multi-turn context (default: true)
ARM_HISTORY_ENABLED=true
# Maximum number of prior messages to include in prompts (Human/AI messages, excludes System)
# Keep modest to avoid context bloat; 12 is a good default
ARM_MAX_HISTORY_MESSAGES=12

# Guidelines Engine Configuration
ARM_GUIDELINES_MODE=off
ARM_GUIDELINES_FORMAT=comprehensive
ARM_GUIDELINES_INCLUDE_STATS=false
